sumar(a, b):
    return a + b

restar(a, b):
    return a - b

multiplicar(a, b):
    return a * b

dividir(a, b):
    if b == 0:
        return "Error: División por cero"
    return a / b

#Bucle
while True:
    print("Operaciones disponibles:")
    print("1. Sumar")
    print("2. Restar")
    print("3. Multiplicar")
    print("4. Dividir")
    print("5. Salir")

    Action =int(input("Opción:"))
